<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="#EDEDED"
    android:paddingBottom="5dp"
    android:paddingTop="8dp">

    <com.shehuan.niv.NiceImageView
        android:layout_marginLeft="10dp"
        android:id="@+id/usr_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/icon_drawable"
        app:corner_radius ="5dp"
        android:src="@drawable/user_1" />

    <pw.xiaohaozi.bubbleview.BubbleView
        android:id="@+id/bv_defaule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="65dp"
        android:layout_toRightOf="@id/usr_icon"
        app:bubbleIndicatorLocation="start"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/usr_msg"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/black"
            android:textSize="16sp"
             />
    </pw.xiaohaozi.bubbleview.BubbleView>
</RelativeLayout>